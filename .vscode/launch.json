    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: pytest with debugger",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--verbose",
                "--showlocals",
                "--tb=short",
                "--pdb",
                "--pdbcls=bpdb:BPdb",
                "-m",
                "retryonly",
                "."
            ],
            "cwd": "${workspaceFolder}/app",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "(uv) Debug src/oh_my_ai_docs/avectorstore_mcp.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/oh_my_ai_docs/avectorstore_mcp.py",
            "args": [
                "--module",
                "discord",
                "--stdio",
                "--debug"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "PYTHONASYNCIODEBUG": "1"
            },
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}/.venv/bin/python",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: pytest",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            "args": [
                "-s",
                "--verbose",
                "--showlocals",
                "--tb=short",
                "tests"
            ],
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "PYTHONASYNCIODEBUG": "1",
                "UV_ACTIVE_PYTHON": "${workspaceFolder}/.venv/bin/python"
            },
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}/.venv/bin/python",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: pytest with bpdb",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            "args": [
                "-s",
                "--verbose",
                "--showlocals",
                "--tb=short",
                // "--pdb",
                // "--pdbcls=bpdb:BPdb",
                "tests"
            ],
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "PYTHONASYNCIODEBUG": "1",
                "UV_ACTIVE_PYTHON": "${workspaceFolder}/.venv/bin/python"
            },
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}/.venv/bin/python",
            "console": "integratedTerminal"
        },
        {
            "name": "(uv) Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
